            </div>

            <div class="styled-input">
                <input required type="text" id="aa4">
                <label>Country</label>
            </div>

        </div>

    </div>

    <div class="styled-input mb-4 d-flex align-items-center mt-4">
        <button style="width: 240px;transition: 1s;" type="button" onclick="step(); this.style.opacity=0">Update!</button>
    </div>
   </div>
</div>

<script>
    function step(){
        document.getElementById('step1').style.opacity=0
        document.getElementById('step2').style.display="flex"
        document.getElementById('step2').style.opacity=1
        document.querySelector('button').style.display="none"
        setTimeout(() => {
            
            document.getElementById('step2').style.opacity=0
            document.getElementById('step2').style.display="none"

            setTimeout(() => {
                document.getElementById('step3').style.display="flex"
                document.getElementById('step3').style.opacity=1
            }, 800);
        }, 1111);
    }
</script>

