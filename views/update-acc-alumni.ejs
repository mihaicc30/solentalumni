            <li class="breadcrumb-item active" aria-current="page">Update Account</li>
        </ol>
    </nav>


    <div id="step2" class="spinner-border d-flex m-auto" style="width: 3rem; height: 3rem;" role="status">
        <span class="visually-hidden ">Loading...</span>
    </div>

    <div id="step3" class="alert alert-success justify-content-center" role="alert">
        <p>Account updated!</p>
      </div>

    <div>
    <div  id="step1" class="d-flex justify-content-center flex-wrap" style="max-width: 700px;margin: 0 auto;">


        <div class="d-flex flex-column align-items-center gap-2 mx-4" style="max-width: 500px;">
            <div class="styled-input" style="margin-top: 40px">
                <input required type="text" id="a1">
                <label>Name*</label>
            </div>

            <div class="styled-input">
                <input required type="text" id="a2">
                <label>Email*</label>
            </div>

            <div class="styled-input">
                <input required type="text" id="a3">
                <label>Password</label>
            </div>

            <div class="styled-input">
                <input required type="text" id="a4">
                <label>Confirm Password</label>
            </div>

        </div>

        <div class="d-flex flex-column align-items-center gap-2 mx-4" style="max-width: 500px;">
            <div class="styled-input" style="margin-top: 40px">
                <input required type="text" id="aa1">
                <label>Address Line1</label>
            </div>

            <div class="styled-input">
                <input required type="text" id="aa2">
                <label>Address Line2</label>
            </div>

            <div class="styled-input">
                <input required type="text" id="aa3">
